<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <EditText
            android:id="@+id/edit_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_post_hint"
            android:autofillHints="new post"
            android:inputType="textMultiLine" />
        <Button
            android:id="@+id/btn_publish_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg_dark_blue"
            android:text="@string/btn_publish_new_post"
            android:textAllCaps="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.cis102y.wellbeing.utils.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
</LinearLayout>
