<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointments_header"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#000000" />
        <com.cis102y.wellbeing.utils.CircleImageView
            android:id="@+id/bookings_header_user_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_desc_profile_link"
            android:background="@null"
            android:src="@drawable/user_placeholder"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_bookings_schedule_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border_blue"
        android:text="@string/btn_bookings_schedule_appointment"
        android:layout_margin="16dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bookings_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bookings_pager"
        android:layout_weight="1"/>
</LinearLayout>
